<div class="in-panel">
  <div class="row no-gutters">
    <div class="col-6">
      <div class="card card-block">
        <h6>Welcome back, {{model.currentUser.person.fullName}}!</h6>
      </div>
    </div>

    <div class="col-6">
      <div class="card">
        <div class="card-header">
          Last Blog Posts
        </div>
        {{#each model.blogPosts as |blogPost|}}
          {{#link-to "admin.posts.post" blogPost.slug class="card card-block"}}
            <h5 class="card-title">{{blogPost.title}}</h5>
          {{/link-to}}
        {{/each}}
      </div>
    </div>

    <p>
      TODO later: Last Comments, Last Visitors
    </p>
  </div>
</div>
