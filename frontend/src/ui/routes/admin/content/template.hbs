<div class="in-panel">
  <div class="card">
    <div class="card-header">
      Last Blog Posts
    </div>
    {{#each this.model.lastBlogPosts as |blogPost|}}
      <LinkTo @route="posts.post" @params={{blogPost}} class="card card-body">
        <h5 class="card-title">
          {{blogPost.title}}
        </h5>
      </LinkTo>
    {{/each}}
  </div>
</div>
