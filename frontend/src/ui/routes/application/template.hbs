<HeadLayout/>

{{#each this.flashMessages.queue as |flash flashMessageIndex|}}
  {{!--  {{#if (is-equal flashMessageIndex (subtract this.flashMessages.queue.length 1))}}  --}}
    <FlashMessage @flash={{flash}} as |Component flash|>
      <strong data-test-flash-message="{{flashMessageIndex}}">{{flash.message}}</strong>
    </FlashMessage>
  {{!--  {{/if}}  --}}
{{/each}}

{{outlet}}

{{#each this.modals.model as |modal|}}
  {{#if (is-equal this.modals.model.lastObject modal)}}
    {{component modal.componentName modal.context modalName=(concat "in-" modal.name) model=modal.model close=this.modals.close confirm=this.modals.confirm}}
  {{/if}}
{{/each}}
