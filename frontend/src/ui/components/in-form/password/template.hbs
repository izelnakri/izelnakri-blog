{{#in-form/wrapper name=name model=model attribute=attribute
  placeholder=placeholder label=label hint=hint inputGroup=true addonLeft=addonLeft
}}
  <span class="input-group-btn" {{action "addonClick"}}>
    <button class="btn btn-outline-secondary" type="button" {{action "addonClick"}}>
      {{fa-icon "lock" fixedWidth=true}}
    </button>
  </span>

  <input id="{{name}}" name="{{name}}" type={{inputType}} class="form-control"
    required={{required}} value={{value}} autofocus={{autofocus}}
    placeholder={{placeholder}} data-test-input="{{name}}" />

  <span class="input-group-btn">
    {{#if (is-equal inputType "password")}}
      <button class="btn btn-outline-secondary" type="button" {{action "changeInputType"}}>
        {{fa-icon "eye" fixedWidth=true}}
      </button>
    {{else}}
      <button class="btn btn-danger" type="button" {{action "changeInputType"}}>
        {{fa-icon "eye-slash" fixedWidth=true}}
      </button>
    {{/if}}
  </span>
{{/in-form/wrapper}}
