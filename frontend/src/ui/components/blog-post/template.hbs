<div class="in-blog-post">
  <div class="card card-body">
    <h1 class="in-blog-post-title" data-test-blog-post-title>
      {{this.model.title}}
    </h1>
    <ul class="list-inline text-muted d-flex justify-content-end hidden-sm-down">
      <li class="list-inline-item mr-auto" data-test-blog-post-author>
        <i class="fa fa-terminal fa-fw"></i>{{this.model.user.person.fullName}}
      </li>
      <!-- tags here -->
      {{#each model.tags as |tag index|}}
        <li class="list-inline-item" data-test-blog-post-tag="{{index}}">
          <i class="fa fa-tags fa-fw"></i>{{this.tag.name}}
        </li>
      {{/each}}
      <li class="list-inline-item" data-test-blog-post-date>
        <i class="fa fa-clock-o fa-fw"></i>{{date this.model.insertedAt}}
      </li>
    </ul>

    <ul class="list-inline text-muted hidden-sm-up">
      <!-- tags here -->
      <li class="list-inline-item">
        <i class="fa fa-tags fa-fw"></i>{{this.model.tag}}
      </li>
      <li class="list-inline-item">
        <i class="fa fa-clock-o fa-fw"></i>{{this.model.insertedAt}}
      </li>
    </ul>

    {{{this.content}}}
  </div>
</div>
