<h2>Basic usage</h2>

<DocsDemo as |demo|>
  <demo.example>
    <Table @model={{this.model.people}} as |table|>
      <thead>
        <tr>
          <table.th @title="First Name"/>
          <table.th @title="Last Name"/>
        </tr>
      </thead>
      <tbody>
        {{#each table.model as |person|}}
          <tr>
            <td>{{person.firstName}}</td>
            <td>{{person.lastName}}</td>
          </tr>
        {{/each}}
      </tbody>
    </Table>
  </demo.example>

