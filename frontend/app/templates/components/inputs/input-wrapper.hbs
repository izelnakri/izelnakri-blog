
{{#if label}}
  {{#if errorMessage}}
    <label for={{labelRef}} class="text-danger">{{label}} {{errorMessage}}:</label>
  {{else}}
    <label for={{labelRef}}>{{label}}:</label>
  {{/if}}
{{/if}}

{{#if inputGroup}}
  <div class="input-group">
    {{yield}}
  </div>
{{else}}
  {{yield}}
{{/if}}

{{#if hint}}
  <p class="text-muted">
    {{hint}}
  </p>
{{/if}}
