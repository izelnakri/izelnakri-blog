{{#in-modal title="Are you sure?" onClose=(action "cancel")}}
  <div class="modal-body">
    <p>
      Are you sure you want to do this?
    </p>
  </div>

  <div class="modal-footer">
    {{#in-button "danger" onClick=(action "cancel")}}Cancel{{/in-button}}
    {{#in-button "success" onClick=(action "confirm")}}Confirm{{/in-button}}
  </div>
{{/in-modal}}
